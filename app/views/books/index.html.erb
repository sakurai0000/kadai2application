<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>課題2提出用</title>
  </head>

<h1>Books</h1>

<% @books.each do |book| %>

  <p>タイトル</p>
<%= link_to book.title, book_path(book.id) %>

  
<% end %>
<% if @list.errors.any? %>
  <%= @list.errors.count %>error
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>New book</h1>
<%= form_with model: Book.new do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Books' %>
  

<% end %>